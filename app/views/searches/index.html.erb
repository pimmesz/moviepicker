<h1>Searches#index</h1>
<p>Find me in app/views/searches/index.html.erb</p>

<%= form_tag searches_path, method: :get do %>
<%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a flat" %>
<%= submit_tag("Find") %>
<% end %>

<% if @results.present? %>
  <% @results.each do |movie| %>
  <div class="movie-details")>
    <div class="movie-description">
      <p><%= movie["title"] %></p>
      <p><%= movie %></p>
      <p><% movie_id = movie["id"] %></p>
      <% if Tmdb::Movie.trailers("#{movie['id']}")["youtube"].present? %>
        <p><%#= link_to "trailer", "https://www.youtube.com/watch?v=#{Tmdb::Movie.trailers("#{movie['id']}")["youtube"].first["source"]}" %></p>
      <% end %>
    </div>
    <div class="movie-image">
      <p><%= image_tag "https://image.tmdb.org/t/p/w300_and_h450_bestv2/#{movie["poster_path"]}" %></p>
    </div>
  </div>
  <% end %>
<% end %>

